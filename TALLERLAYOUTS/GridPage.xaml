<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TALLERLAYOUTS.GridPage"
             Title="GridPage">
    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*"
          VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand">

        <BoxView BackgroundColor="Yellow" Grid.Row="0" Grid.Column="0"/>
        <BoxView BackgroundColor="Blue" Grid.Row="0" Grid.Column="1"/>
        <BoxView BackgroundColor="Red" Grid.Row="1" Grid.Column="0"/>

        <Grid Grid.Row="1" Grid.Column="1"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand">
            <BoxView BackgroundColor="Brown"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"/>
            <Button Text="Ir a StackLayout"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Clicked="OnGoToStackPageClicked"/>
        </Grid>

    </Grid>
</ContentPage>